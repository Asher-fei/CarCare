<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>\

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名称"
                        android:textColor="#252525"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/bg_gray_1stroke"
                        android:gravity="center_vertical"
                        android:hint="请输入名称"
                        android:singleLine="true"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分类"
                        android:textColor="#252525"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvChooseClass"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/bg_gray_1stroke"
                        android:gravity="center_vertical"
                        android:hint="请选择分类"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="售价"
                        android:textColor="#252525"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/bg_gray_1stroke"
                        android:gravity="center_vertical"
                        android:hint="请输入售价"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提成类型"
                        android:textColor="#252525"
                        android:textSize="14sp"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/selector_cb_round_small"
                            android:drawablePadding="10dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="金额"
                            android:textColor="#252525"
                            android:textSize="14sp"/>

                        <RadioButton
                            android:id="@+id/rbPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:button="@null"
                            android:drawableLeft="@drawable/selector_cb_round_small"
                            android:drawablePadding="10dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="百分比"
                            android:textColor="#252525"
                            android:textSize="14sp"/>
                    </RadioGroup>

                    <EditText
                        android:id="@+id/etCommission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_gray_1stroke"
                        android:hint="请输入提成"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务说明"
                        android:textColor="#252525"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etDes"
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_gray_1stroke"
                        android:gravity="start"
                        android:hint="请输入名称"
                        android:padding="13dp"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务图片"
                        android:textColor="#252525"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/divide_line"/>

                    <com.lida.carcare.widget.InnerGridView
                        android:id="@+id/gridView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="5dp"
                        android:listSelector="#00FFFFFF"
                        android:numColumns="5">
                    </com.lida.carcare.widget.InnerGridView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FF5C33"
        android:text="保存"
        android:textColor="#FBFBFB"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>