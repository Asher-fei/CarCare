<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical"
    >

    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="卡号"
                android:textColor="#252525"
                android:textSize="14sp"/>

           <!-- <TextView
                android:id="@+id/selectCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:background="@drawable/bg_gray_1stroke"
                android:hint="请选择卡号"
                android:padding="10dp"
                android:drawableRight="@drawable/icon_arrow_r"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="13sp"/>-->
            <EditText
                android:id="@+id/selectCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:background="@drawable/bg_gray_1stroke"
                android:padding="10dp"
                android:gravity="right"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="充值金额"
                android:textColor="#252525"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/residualAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:background="@drawable/bg_gray_1stroke"
                android:hint="请输入充值金额"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnReceive"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FF5C33"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="17sp"/>
</LinearLayout>
