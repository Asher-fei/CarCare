<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="#969494"
                android:textSize="13sp"
                android:text="设定默认下次保养周期"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>

                <CheckBox
                    android:id="@+id/cbMainTain"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="保养到期提醒"
                    android:textColor="#2B2A2A"
                    android:drawableRight="@drawable/selector_checkbox_pic"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:id="@+id/llMainTainExpire"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"
                        android:text="到期时间"
                        android:textColor="#2B2A2A"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvMainTainExpire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/icon_arrow_r"
                        android:lineSpacingExtra="3dp"
                        android:text="到期前1个月"
                        android:textColor="#777777"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:id="@+id/llMainTainNotice"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"
                        android:text="提醒时间"
                        android:textColor="#2B2A2A"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvMainTainNotice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/icon_arrow_r"
                        android:lineSpacingExtra="3dp"
                        android:text="到期前10天"
                        android:textColor="#777777"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="#969494"
                android:textSize="13sp"
                android:text="完善车辆注册日期，系统将自动推算"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <CheckBox
                    android:id="@+id/cbInsurance"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:textSize="14sp"
                    android:textColor="#2B2A2A"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:button="@null"
                    android:drawableRight="@drawable/selector_checkbox_pic"
                    android:text="保险到期提醒"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:id="@+id/llInsuranceNotice"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"
                        android:text="提醒时间"
                        android:textColor="#2B2A2A"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvInsuranceNotice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/icon_arrow_r"
                        android:lineSpacingExtra="3dp"
                        android:text="到期前10天"
                        android:textColor="#777777"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="#969494"
                android:textSize="13sp"
                android:text="完善车辆注册日期，系统将自动推算"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <CheckBox
                    android:id="@+id/cbYearCheck"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:textSize="14sp"
                    android:textColor="#2B2A2A"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/selector_checkbox_pic"
                    android:button="@null"
                    android:text="年审到期提醒"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:id="@+id/llYearCheckNotice"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"
                        android:text="提醒时间"
                        android:textColor="#2B2A2A"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvYearCheckNotice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/icon_arrow_r"
                        android:lineSpacingExtra="3dp"
                        android:text="到期前10天"
                        android:textColor="#777777"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="#969494"
                android:textSize="13sp"
                android:text="未修复的检车问题智能提醒，进行二次营销"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <CheckBox
                    android:id="@+id/cbCheckCar"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:textSize="14sp"
                    android:textColor="#2B2A2A"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/selector_checkbox_pic"
                    android:button="@null"
                    android:text="检车到期提醒"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:id="@+id/llCheckCarExpire"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"
                        android:text="到期时间"
                        android:textColor="#2B2A2A"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvCheckCarExpire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/icon_arrow_r"
                        android:lineSpacingExtra="3dp"
                        android:text="到期前1个月"
                        android:textColor="#777777"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:id="@+id/llCheckCarNotice"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"
                        android:text="提醒时间"
                        android:textColor="#2B2A2A"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvCheckCarNotice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/icon_arrow_r"
                        android:lineSpacingExtra="3dp"
                        android:text="到期前10天"
                        android:textColor="#777777"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="#969494"
                android:textSize="13sp"
                android:visibility="gone"
                android:text="系统每天定期检车提醒，保险，年审，保养时间，此类提醒不需要 添加"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:id="@+id/llExpire"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"
                        android:text="到期时间"
                        android:textColor="#2B2A2A"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvExpire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/icon_arrow_r"
                        android:lineSpacingExtra="3dp"
                        android:text="到期前1个月"
                        android:textColor="#777777"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:id="@+id/llNotice"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"
                        android:text="提醒时间"
                        android:textColor="#2B2A2A"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvNotice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/icon_arrow_r"
                        android:lineSpacingExtra="3dp"
                        android:text="到期前10天"
                        android:textColor="#777777"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_line"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnReceive"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FF5C33"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="17sp"/>
</LinearLayout>