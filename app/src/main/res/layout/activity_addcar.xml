<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/window_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="车牌号"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <com.lida.carcare.widget.EditCarNumber
                            android:id="@+id/etCarNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1">
                        </com.lida.carcare.widget.EditCarNumber>

                        <ImageView
                            android:id="@+id/ivScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_scan"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="客户名称"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gray_1stroke"
                            android:hint="请输入姓名"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnChooseCustomer"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_2radiu_orange"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:text="选择系统已有客户"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <RadioGroup
                            android:id="@+id/rbSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:checkedButton="@+id/rbMan"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbMan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/selector_checkbox"
                                android:drawablePadding="8dp"
                                android:text="先生"
                                android:textSize="16sp"/>

                            <RadioButton
                                android:id="@+id/rbWomen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:button="@null"
                                android:drawableLeft="@drawable/selector_checkbox"
                                android:drawablePadding="8dp"
                                android:text="女士"
                                android:textSize="16sp"/>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="手机号"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gray_1stroke"
                            android:hint="请输入手机号"
                            android:inputType="number"
                            android:maxLength="11"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:visibility="visible"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="微信昵称"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etNickName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gray_1stroke"
                            android:hint="微信公众号推送消息时填写"
                            android:maxLength="11"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:visibility="visible"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="充值卡"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                    </LinearLayout>
                    <com.lida.carcare.widget.InnerListView
                        android:id="@+id/listViewPrepaidPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.lida.carcare.widget.InnerListView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:visibility="visible"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="次卡"
                            android:textColor="#363636"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <com.lida.carcare.widget.InnerListView
                        android:id="@+id/listViewTimeCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.lida.carcare.widget.InnerListView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="进店里程"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etMile"
                            android:layout_width="167dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_gray_1stroke"
                            android:hint="请输入进店里程"
                            android:imeOptions="actionSearch"
                            android:inputType="number"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="14sp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btnSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:background="@drawable/bg_2radiu_orange"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:singleLine="true"
                            android:text="确定"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <com.lida.carcare.widget.InnerGridView
                        android:id="@+id/gvSmart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/white"
                        android:horizontalSpacing="5dp"
                        android:listSelector="#00FFFFFF"
                        android:numColumns="4"
                        android:padding="10dp"
                        android:verticalSpacing="5dp">
                    </com.lida.carcare.widget.InnerGridView>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#FFFFFF"
                        >
                        <Button
                            android:id="@+id/btnAddCustomProject"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:background="@drawable/bg_2radiu_orange"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:singleLine="true"
                            android:text="自定义项目"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </RelativeLayout>
                    <com.lida.carcare.widget.InnerListView
                        android:id="@+id/lvCustomProject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.lida.carcare.widget.InnerListView>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="常用快捷项目："
                        android:background="#FFFFFF"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:padding="10dp"
                        />

                    <com.lida.carcare.widget.InnerGridView
                        android:id="@+id/gridViewHotService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:horizontalSpacing="5dp"
                        android:listSelector="#00FFFFFF"
                        android:numColumns="4"
                        android:padding="10dp"
                        android:verticalSpacing="10dp"
                        >
                    </com.lida.carcare.widget.InnerGridView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_gray_1stroke"
                            android:layout_margin="10dp"
                            >
                            <EditText
                                android:id="@+id/etSearch"
                                android:layout_width="0dp"
                                android:layout_height="38dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:drawableLeft="@drawable/icon_search"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:imeOptions="actionSearch"
                                android:hint="搜索服务项目关键词"
                                android:singleLine="true"
                                android:textSize="15sp"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <com.lida.carcare.widget.InnerGridView
                        android:id="@+id/gvSearchService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:horizontalSpacing="5dp"
                        android:listSelector="#00FFFFFF"
                        android:numColumns="4"
                        android:padding="10dp"
                        android:verticalSpacing="10dp"
                        ></com.lida.carcare.widget.InnerGridView>

                    <com.lida.carcare.widget.InnerListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.lida.carcare.widget.InnerListView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="已选项目："
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:padding="10dp"
                            />
                        <Button
                            android:id="@+id/clear"
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:text="重置"
                            android:textSize="14sp"
                            android:background="@drawable/bg_2radiu_orange"
                            android:textColor="#ffffff"
                            android:layout_marginRight="10dp"
                            />
                    </LinearLayout>

                    <com.lida.carcare.widget.InnerListView
                        android:id="@+id/innerListViewService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        >
                    </com.lida.carcare.widget.InnerListView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:padding="10dp"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共计："
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:layout_gravity="center_vertical"
                            />
                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/bg_gray_1stroke"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥"
                                android:textSize="16sp"
                                android:textColor="#FF5C33"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                />
                            <EditText
                                android:id="@+id/etUpdatePrice"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:textSize="16sp"
                                android:textColor="#FF5C33"
                                android:inputType="numberDecimal"
                                android:imeOptions="actionDone"
                                android:text="0.00"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="接车事项"
                        android:textSize="16sp">
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="备注"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_gray_1stroke"
                            android:drawableRight="@drawable/icon_arrow_r"
                            android:ellipsize="end"
                            android:hint="请输入备注"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="14sp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="车架号"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/etCarId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gray_1stroke"
                            android:hint="请输入车架号"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="车型"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvChooseCar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gray_1stroke"
                            android:drawableRight="@drawable/icon_arrow_r"
                            android:hint="请输入车型"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="14sp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="预计交车"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvChooseTime"
                            android:layout_width="167dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_gray_1stroke"
                            android:drawableRight="@drawable/icon_arrow_down"
                            android:hint="2017-03-24 19:46"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvQuickSetting"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="快捷设置"
                            android:textColor="#038CDB"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="进店油表"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvOil"
                            android:layout_width="167dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/bg_gray_1stroke"
                            android:drawableRight="@drawable/icon_arrow_down"
                            android:hint="请输入进店油表数"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFF"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="65dp"
                            android:text="在店等"
                            android:textColor="#363636"
                            android:textSize="16sp"/>

                        <CheckBox
                            android:id="@+id/cbWait"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:background="@color/white"
                            android:button="@null"
                            android:drawableRight="@drawable/selector_checkbox_rec"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="16sp">
                        </CheckBox>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divide_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共0项"
                            android:textColor="#111111"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="¥"
                            android:textColor="#FF5C33"
                            android:textSize="19sp"/>

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="0.0"
                            android:textColor="#FF5C33"
                            android:textSize="19sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
