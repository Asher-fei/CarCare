<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivTop"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/temp_car"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C3B3B"
                        android:text="SONAX真皮清洁养护"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/tvClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#A9A6A6"
                        android:text="分类：美容类-内饰美容"
                        android:layout_marginTop="13dp"
                        android:textSize="13sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="13dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#A9A6A6"
                            android:text="售价："
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FF5C33"
                            android:text="￥300.00"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:layout_marginTop="13dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C3B3B"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="服务说明"
                        android:textSize="15sp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line"/>
                    <TextView
                        android:id="@+id/tvDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C3B3B"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:lineSpacingExtra="5dp"
                        android:text="车内的真皮座椅或其他真皮饰件长期使用就会出现褶皱、干裂和粗糙失光、脱色、老化等问题,您可以选择“真皮座椅镀膜”工艺。\n“真皮镀膜”采用澳洲特有的优质绵羊毛脂和天然植物树脂等环保原料，能够在汽车内饰真皮表面形成一道光滑柔韧的无形保护膜，保持真皮透气的同时又能彻底隔离污垢。"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#55808080"
                android:visibility="gone"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>