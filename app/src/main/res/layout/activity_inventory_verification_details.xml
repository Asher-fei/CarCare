<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        layout="@layout/base_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#7c7b7b"
                android:text="盘点单号："
                android:textSize="13sp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/shoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7c7b7b"
                android:text=""
                android:textSize="13sp"
                android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#7c7b7b"
                android:text="盘  点  人："
                android:textSize="13sp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/shoutPeason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7c7b7b"
                android:text=""
                android:textSize="13sp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/shoutDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#7c7b7b"
                android:layout_weight="1"
                android:text=""
                android:gravity="right"
                android:textSize="13sp"
                android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shoutStock"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:text="盘 点："
                android:textSize="15sp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/shoutOk"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#ff6633"
                android:text="盘 盈："
                android:textSize="15sp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/shoutNo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#f90000"
                android:text="盘 亏："
                android:textSize="15sp"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/show_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="#FF5C33"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:drawableRight="@drawable/icon_arrow_orange_down"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:text="全部"/>
    <ListView
        android:id="@+id/pullToRefreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>