<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="17dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_4radiu_white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#272626"
                        android:textSize="14sp"
                        android:text="年审到期"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FCA11F"
                            android:textSize="13sp"
                            android:visibility="gone"
                            android:text="剩余"/>
                        <TextView
                            android:id="@+id/tvDaysRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FC391F"
                            android:textSize="13sp"
                            android:text="31"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FCA11F"
                            android:textSize="13sp"
                            android:visibility="gone"
                            android:text="天"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvMaturityDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7D7B7B"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:text="2017.04.30到期"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="19dp">
                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1F1F1F"
                        android:textSize="14sp"
                        android:text="陈总"/>
                    <TextView
                        android:id="@+id/tvMobilePhoneNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#007CC4"
                        android:textSize="12sp"
                        android:layout_marginLeft="36dp"
                        android:text="1338765436"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvCarInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7D7B7B"
                    android:layout_marginTop="9dp"
                    android:textSize="12sp"
                    android:text="湘A6888 进口宝马X6"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>