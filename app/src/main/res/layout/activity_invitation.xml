<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="24dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#161616"
            android:textSize="20sp"
            android:padding="16dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击即复制邀请码"
            android:textColor="#9B9B9B"
            android:textSize="11sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="分享到"
        android:textColor="#4E4D4D"
        android:background="#F0F0F0"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tvWechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信"
        android:textColor="#363737"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:drawableLeft="@drawable/icon_wechat1"
        android:drawablePadding="10dp"
        android:textSize="14sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"/>
    <TextView
        android:id="@+id/tvQQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QQ"
        android:textColor="#363737"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:drawableLeft="@drawable/icon_qq"
        android:drawablePadding="10dp"
        android:textSize="14sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"/>
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短信"
        android:textColor="#363737"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:drawableLeft="@drawable/icon_message1"
        android:drawablePadding="10dp"
        android:textSize="14sp"/>
</LinearLayout>